<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/grupoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDetalleGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del grupo"
            android:textSize="24sp"
            android:textColor="@color/blueAMedias"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="16dp">

                <Button
                    android:id="@+id/buttonAnadirGasto"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="+"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/blueAMedias"
                    android:background="@drawable/circulo_anadir"
                    android:fontFamily="serif" />

                <TextView
                    android:id="@+id/textViewLabelAnadir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Añadir gasto"
                    android:textSize="14sp"
                    android:textColor="@color/blueAMedias"
                    android:fontFamily="serif"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/buttonVerBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver balance"
                android:background="@drawable/fondo_grupo"
                android:textColor="@android:color/white"
                android:fontFamily="serif"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonFotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imágenes"
                android:background="@drawable/fondo_grupo"
                android:textColor="@android:color/white"
                android:fontFamily="serif"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBotonesInferiores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonSalirGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salir del grupo"
                android:background="@drawable/fondo_grupo"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:fontFamily="serif"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonEliminarGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar grupo"
                android:background="@drawable/fondo_grupo"
                android:textColor="@android:color/white"
                android:fontFamily="serif"
                android:padding="12dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Contenedor de gastos -->
        <LinearLayout
            android:id="@+id/contenedorGastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:padding="8dp"
            android:fontFamily="serif"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
