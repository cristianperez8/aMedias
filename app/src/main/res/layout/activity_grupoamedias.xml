<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/grupoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDetalleGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del grupo"
            android:textSize="24sp"
            android:textColor="@color/blueAMedias"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif" />

        <Button
            android:id="@+id/buttonAnadirGasto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/blueAMedias"
            android:background="@drawable/circulo_anadir"
            android:layout_marginTop="24dp"
            android:fontFamily="serif"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/buttonVerBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver balance"
            android:background="@drawable/fondo_grupo"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:fontFamily="serif"
            android:layout_marginBottom="5dp"/>

        <!-- Contenedor donde aparecerÃ¡n los gastos -->
        <LinearLayout
            android:id="@+id/contenedorGastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:padding="8dp"
            android:fontFamily="serif"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
